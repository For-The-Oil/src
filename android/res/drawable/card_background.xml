<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond -->
    <solid android:color="#FFFFFF"/>

    <!-- Coins arrondis -->
    <corners android:radius="12dp"/>

    <!-- Bordure grise légère -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD"/>

    <!-- Padding interne -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
