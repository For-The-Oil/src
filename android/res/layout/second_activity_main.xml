<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Titre en haut -->
    <ImageView
        android:id="@+id/titleText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/for_the_oil"
        android:contentDescription="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <!-- Menu de boutons sous le titre -->
    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/titleText"
        android:layout_marginTop="12dp"
        android:padding="6dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:padding="0dp"
            android:backgroundTint="#64B5F6"
            android:layout_marginHorizontal="6dp"
            app:icon="@drawable/info_24px"
            app:iconTint="@android:color/white"
            app:iconSize="40dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWebsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:padding="0dp"
            android:backgroundTint="#64B5F6"
            android:layout_marginHorizontal="6dp"
            app:icon="@drawable/website_24px"
            app:iconTint="@android:color/white"
            app:iconSize="40dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:padding="0dp"
            android:backgroundTint="#64B5F6"
            android:layout_marginHorizontal="6dp"
            app:icon="@drawable/settings_24px"
            app:iconTint="@android:color/white"
            app:iconSize="40dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDisconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:padding="0dp"
            android:backgroundTint="#E53935"
            android:layout_marginHorizontal="6dp"
            android:onClick="disconnect"
            app:icon="@drawable/logout_24px"
            app:iconTint="@android:color/white"
            app:iconSize="40dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>
    </LinearLayout>

    <!-- Carrousel d'images au milieu -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/menuLayout"
        android:layout_above="@id/playModeLayout"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:strokeWidth="2dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="4dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageCarousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:overScrollMode="never"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bouton Play en bas -->
    <LinearLayout
        android:id="@+id/playModeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:padding="8dp">

        <Button
            android:id="@+id/btnDeck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deck"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#64B5F6"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:padding="0dp"
            android:backgroundTint="@color/custom_blue_dark"
            android:layout_marginHorizontal="8dp"
            android:onClick="play"
            app:icon="@drawable/motion_play_24px"
            app:iconTint="@android:color/white"
            app:iconSize="60dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>

        <Button
            android:id="@+id/btnMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mode"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#64B5F6"
            android:layout_marginHorizontal="8dp"/>

    </LinearLayout>

</RelativeLayout>
