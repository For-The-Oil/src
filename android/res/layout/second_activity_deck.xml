<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedView"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nom du deck + bouton supprimer -->
        <LinearLayout
            android:id="@+id/deckHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:padding="8dp">

            <TextView
                android:id="@+id/currentDeckName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deck actuel"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <Button
                android:id="@+id/btnDeleteDeck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textColor="#FFFFFF"
                android:background="#E53935"/>
        </LinearLayout>

        <!-- Sélecteur de catégorie -->
        <LinearLayout
            android:id="@+id/categorySelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#BBDEFB"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/deckHeader">

            <Button android:id="@+id/btnIndustry" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Industrie" android:textColor="#FFFFFF" android:background="#64B5F6"/>
            <Button android:id="@+id/btnMilitary" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Militaire" android:textColor="#FFFFFF" android:background="#64B5F6"/>
            <Button android:id="@+id/btnDefense" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Défense" android:textColor="#FFFFFF" android:background="#64B5F6"/>
        </LinearLayout>

        <!-- Deck Recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deckRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/categorySelector"/>

        <!-- Liste des decks scrollable -->
        <HorizontalScrollView
            android:id="@+id/deckSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/deckRecycler">

            <LinearLayout
                android:id="@+id/deckSelectorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button android:id="@+id/btnAddDeck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+" android:textColor="#FFFFFF" android:background="@drawable/button_add"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Menu de tri -->
        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C5CAE9"
            app:layout_constraintTop_toBottomOf="@id/deckSelector"/>

        <!-- Inventaire Recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inventoryRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/sortSpinner"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
