<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedView"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:id="@+id/deckHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/currentDeckName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deck actuel"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                app:cornerRadius="20dp"
                android:padding="5dp"
                android:textColor="@android:color/holo_blue_light"
                />

            <!-- View “espacement flexible” -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteDeck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textColor="@color/white"
                app:backgroundTint="#E53935"
                app:cornerRadius="8dp"/>
        </LinearLayout>



        <!-- CATEGORIES -->
        <LinearLayout
            android:id="@+id/categorySelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/deckHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIndustry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Industrie"
                android:textColor="@color/white"
                app:backgroundTint="#64B5F6"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMilitary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Militaire"
                android:textColor="@color/white"
                app:backgroundTint="#64B5F6"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDefense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Défense"
                android:textColor="@color/white"
                app:backgroundTint="#64B5F6"
                app:cornerRadius="12dp"/>
        </LinearLayout>

        <!-- DECK RECYCLER -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deckRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/categorySelector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- HORIZONTAL DECK SELECTOR -->
        <HorizontalScrollView
            android:id="@+id/deckSelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/deckRecycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/deckSelectorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddDeck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    android:layout_marginHorizontal="6dp"
                    app:backgroundTint="#64B5F6"
                    app:icon="@drawable/add_circle_24px"
                    app:iconTint="@android:color/white"
                    app:iconSize="40dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"/>
            </LinearLayout>

        </HorizontalScrollView>

        <!-- BOUTON TRIER -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trier ▼"
            android:textColor="@color/white"
            app:backgroundTint="#64B5F6"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/deckSelector"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- MINI MENU TRI -->
        <LinearLayout
            android:id="@+id/sortMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            android:elevation="4dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnSort"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/sortByName"
                android:padding="8dp"
                android:text="Nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/sortByCategory"
                android:padding="8dp"
                android:text="Catégorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/sortByMaxHealth"
                android:padding="8dp"
                android:text="Santé"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/sortByArmor"
                android:padding="8dp"
                android:text="Armure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/sortByTotalCost"
                android:padding="8dp"
                android:text="Coût total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>


        <!-- INVENTAIRE -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inventoryRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/sortMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
