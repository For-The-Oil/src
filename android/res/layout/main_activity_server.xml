<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/server_page"
    android:padding="24dp">

    <TextView
        android:id="@+id/serverSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paramètres du serveur"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/serverMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:textSize="16sp"
        android:layout_below="@id/serverSettingsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/serverIpField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adresse IP"
        android:layout_below="@id/serverMessage"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/serverPortField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Port"
        android:layout_below="@id/serverIpField"
        android:layout_marginTop="16dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/connectServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:onClick="registerServer"
        android:layout_below="@id/serverPortField"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/defaultServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Défaut"
        android:onClick="defaultServer"
        android:layout_below="@id/connectServerButton"
        android:layout_marginTop="24dp"/>


</RelativeLayout>

