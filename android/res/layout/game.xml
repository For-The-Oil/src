<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container LibGDX -->
    <FrameLayout
        android:id="@+id/libgdxContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- === MENU CAMERA OVERLAY (nouveau) === -->
    <LinearLayout
        android:id="@+id/cameraControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|end"
        android:padding="12dp"
        android:background="#55000000">

        <Button
            android:id="@+id/camZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Zoom" />

        <Button
            android:id="@+id/camZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Zoom" />

        <Button
            android:id="@+id/camRotateLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⟲ Tourner" />

        <Button
            android:id="@+id/camRotateRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⟳ Tourner" />

        <Button
            android:id="@+id/camReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Cam" />

    </LinearLayout>
    <!-- === FIN MENU CAMERA === -->

    <!-- Barre d'informations -->
    <LinearLayout
        android:id="@+id/uiContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action" />
    </LinearLayout>

    <!-- Overlay chargement -->
    <FrameLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

</FrameLayout>
