<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flexbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Barre de boutons horizontaux en haut -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/topButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        flexbox:flexDirection="row"
        flexbox:justifyContent="space_evenly"
        android:padding="8dp"
        android:background="@android:color/transparent">

        <!-- Boutons -->
        <ImageButton
            android:id="@+id/btnMoveUnits"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_blue_button"
            android:src="@drawable/boot"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnAttackUnits"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_blue_button"
            android:src="@drawable/focus"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_blue_button"
            android:src="@drawable/cancel"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnDeleteUnits"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_blue_button"
            android:src="@drawable/trash"
            android:scaleType="centerInside"/>


    </com.google.android.flexbox.FlexboxLayout>

    <!-- Scroll principal vertical servant de fond -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="72dp"
        android:background="#222"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Section 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Units"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSection1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:clipToPadding="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#555"
                android:layout_marginVertical="12dp"/>

            <!-- Section 2 -->
            <!-- ================== QUICK UNITS PRODUCTION ================== -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Units Production"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="12dp"/>

            <!-- BOÎTE A : unités disponibles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2A2A2A"
                android:padding="8dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available units"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:paddingBottom="6dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAvailableUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>

            <!-- BOÎTE B : unités en cours de production -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2A2A2A"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In production"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:paddingBottom="6dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerUnitsInProduction"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#555"
                android:layout_marginVertical="12dp"/>


            <!-- Section 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units List"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSection4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:clipToPadding="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
