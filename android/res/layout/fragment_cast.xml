<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flexbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Barre de boutons horizontaux en haut -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/topButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        flexbox:flexDirection="row"
        flexbox:justifyContent="space_evenly"
        android:padding="8dp"
        android:background="@android:color/transparent">

        <!-- Boutons -->
        <ImageButton
            android:id="@+id/btnAttackUnits"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_blue_button"
            android:src="@drawable/focus"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_blue_button"
            android:src="@drawable/cancel"
            android:scaleType="centerInside"/>

    </com.google.android.flexbox.FlexboxLayout>

    <!-- Scroll principal vertical servant de fond -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="72dp"
        android:background="#222"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Section 1 -->
            <!-- ================== WEAPONS STOCK ================== -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weapons in Stock"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerWeaponsStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
