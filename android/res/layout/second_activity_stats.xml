<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Titre -->
    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistiques du joueur"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Stat 1 -->
    <TextView
        android:id="@+id/stat1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Victoires"
        app:layout_constraintTop_toBottomOf="@id/statsTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <ProgressBar
        android:id="@+id/stat1Progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="70"
        android:max="100"
        android:progressTint="@android:color/holo_green_light"
        app:layout_constraintTop_toBottomOf="@id/statsTitle"
        app:layout_constraintStart_toEndOf="@id/stat1Label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>

    <!-- Stat 2 -->
    <TextView
        android:id="@+id/stat2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ©faites"
        app:layout_constraintTop_toBottomOf="@id/stat1Label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <ProgressBar
        android:id="@+id/stat2Progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="30"
        android:max="100"
        android:progressTint="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/stat1Progress"
        app:layout_constraintStart_toEndOf="@id/stat2Label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
