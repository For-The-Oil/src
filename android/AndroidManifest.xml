<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/ic_launcher"
        android:isGame="true"
        android:appCategory="game"
        android:label="@string/app_name"
        android:theme="@style/DefaultTheme"
        android:enableOnBackInvokedCallback="true"
        tools:ignore="UnusedAttribute">

        <activity
            android:name="io.github.android.activity.SplashActivity"
            android:theme="@style/DefaultTheme"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            tools:ignore="Instantiatable">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="io.github.android.activity.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            tools:ignore="Instantiatable" />

        <activity
            android:name="io.github.android.activity.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />

        <activity
            android:name="io.github.android.activity.GameActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />

        <activity
            android:name="io.github.android.activity.SettingsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />

        <activity
            android:name="io.github.android.activity.InfoActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />

    </application>

</manifest>
